
@{
    ViewBag.Title = "Add";
}

<h2>Add a comic</h2>
<form class="add" method="post" action="/Comic/Add">
    <div>Comic Name: <input type="text" name="ComicName" id="ComicName" /></div>
    <div>Comic Description:</div>
    <div><textarea type="text" name="ComicDesc" id="ComicDesc"></textarea></div>
    <!--It is better to add the cateogry of the comic in the update as here we don't have the ID of the comic to add in the bridging table-->
    <!--<div>
        Category:
    </div>-->
    <div>Publishing year: <input type="text" name="ComicYear" id="ComicYear" /></div>
    <div>Price: <input type="text" name="ComicPrice" id="ComicPrice" /></div>    
    <input type="hidden" name="HasPic" value="1" />
    <div><input type="submit" value="Add a comic" /></div>
</form>
