            {
                <input type="hidden" name="CategoryId" value="@category.CategoryId" />
                <input type="checkbox" name="CategoryId" id="CategoryId" value="@category.CategoryId" />
                <label for="CategoryId">@category.CategoryName</label>
            }
        </div>-->
                <div>Publishing year: <input type="text" name="ComicYear" id="ComicYear" value="@Model.Comic.ComicYear" /></div>
                <div>Price: <input type="text" name="ComicPrice" id="ComicPrice" value="@Model.Comic.ComicPrice" /></div>
                <div class="imageupload"><span>Image: </span> <input type="file" name="ComicPic" id="ComicPic" value="@(Model.Comic.ComicId).@(Model.Comic.PicExtension)"/></div>
                <input type="submit" value="Update the comic" />
            </form>
        </div>
    </div>    
