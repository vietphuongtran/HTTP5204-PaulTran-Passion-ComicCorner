@model ComicCorner.Models.ViewModels.UpdateComic

@{
    ViewBag.Title = "Update";
}

    <h2>Update information about @Model.Comic.ComicName</h2>
    <div class="flexbox">
        <div class="picture">
            @{
                if (Model.Comic.HasPic == 1)
                {
                    <img src="../../Content/Comics/@(Model.Comic.ComicId).@(Model.Comic.PicExtension)" alt="Image of @Model.Comic.ComicName" />
                }
            }
        </div>
        <div class="detail">
            <form class="updateform" method="post" action="/Comic/Update/@Model.Comic.ComicId" enctype="multipart/form-data">
                <input type="hidden" name="ComicId" id="ComicId" value="@Model.Comic.ComicId" />
                <div>Comic Name: <input type="text" name="ComicName" id="ComicName" value="@Model.Comic.ComicName" /></div>
                <div>Comic Description:</div>
                <div><textarea type="text" name="ComicDesc" id="ComicDesc">@Model.Comic.ComicDesc"</textarea></div>

                <!--Can not pass on multiple checkbox to run the multiple query because we do not know how many queries to run depends on users' choices-->
